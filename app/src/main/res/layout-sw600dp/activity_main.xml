<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/StartText"
        android:layout_marginTop="@dimen/yaxis_text"
        android:text="@string/Akber"
        android:textColor="@color/text"
        android:textSize="@dimen/text" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/StartNumber"
        android:layout_marginTop="@dimen/EndNumber"
        android:gravity="center"
        android:text="0"
        android:textColor="@color/text"
        android:textSize="@dimen/text" />

    <ImageButton
        android:id="@+id/button"
        android:layout_width="@dimen/ButtonWidth"
        android:layout_height="@dimen/ButtonHeight"
        android:layout_below="@+id/textView"
        android:layout_marginStart="@dimen/StartButton"
        android:layout_marginTop="@dimen/yaxis_Button"
        android:background="@drawable/graphic_button"
        android:foregroundGravity="center"
        app:srcCompat="@android:drawable/checkbox_off_background"
        tools:ignore="DuplicateIds" />

</RelativeLayout>